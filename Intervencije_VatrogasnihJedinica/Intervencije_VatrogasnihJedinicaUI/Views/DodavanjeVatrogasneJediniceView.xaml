        <Button Content="Vrati se" HorizontalAlignment="Left" Margin="266,234,0,0" VerticalAlignment="Top" IsCancel="True" Width="115" Height="37" />
        <Label x:Name="PorukaGreskeZaAdresu" Foreground="Red" FontWeight="Normal" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="47,181,0,0" VerticalAlignment="Top" Width="312" Height="31" />
    </Grid>
</Window>
