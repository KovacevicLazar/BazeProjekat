<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" xmlns:models="clr-namespace:Intervencije_VatrogasnihJedinicaUI.Models" x:Class="Intervencije_VatrogasnihJedinicaUI.Views.DodavanjeIntervencijeView" mc:Ignorable="d" FontWeight="Bold" WindowStartupLocation="CenterScreen" Title="DodavanjeIntervencijeView" Height="419.087" Width="393.141">
    <Window.Resources>
        <models:SadrzajDugmetaDodajIzmeni x:Key="SadrzajDugmetaDodajIzmeni" />
        <models:NullToIsReadOnlyConverter x:Key="NullToIsReadOnlyConverter" />
    </Window.Resources>
    <Grid>
        <Label Content="Dodavanje nove intervencije:" HorizontalContentAlignment="Center" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="385" Margin="0,10,0,0" />
        <Label Content="Adresa..............:" HorizontalAlignment="Left" Margin="71,167,0,0" VerticalAlignment="Top" Width="104" />
        <Label Content="Opstina.............:" HorizontalAlignment="Left" Margin="71,113,0,0" VerticalAlignment="Top" Width="104" />
        <Label Content="Datum...............:" HorizontalAlignment="Left" Margin="71,221,0,0" VerticalAlignment="Top" Width="104" Height="28" />
        <TextBox x:Name="Adresa" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="26" Margin="180,167,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="131" />
        <ComboBox x:Name="Opstine" SelectedItem="{Binding IzabranaOpstina, Mode=TwoWay}" VerticalContentAlignment="Center" DisplayMemberPath="Naziv_Opstine" HorizontalAlignment="Left" Margin="180,113,0,0" VerticalAlignment="Top" Width="131" Height="26" />

        <DatePicker x:Name="Datum" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="180,221,0,0" VerticalAlignment="Top" Width="131" Height="28" />
        <Label Content="Vreme...............:" HorizontalAlignment="Left" Margin="71,277,0,0" VerticalAlignment="Top" Width="104" Height="28" />
        <Label Content=":" FontSize="23" HorizontalAlignment="Left" VerticalAlignment="Top" Width="23" Height="35" Margin="237,270,0,0" />
        <xctk:IntegerUpDown x:Name="Sati" Value="{Binding Sati, Mode=TwoWay}" VerticalContentAlignment="Center" Minimum="0" Maximum="23" HorizontalAlignment="Left" Margin="180,277,0,0" VerticalAlignment="Top" Height="28" Width="46" />
        <xctk:IntegerUpDown x:Name="Minuti" VerticalContentAlignment="Center" Value="{Binding Minuti, Mode=TwoWay}" Minimum="0" Maximum="59" HorizontalAlignment="Left" Margin="265,277,0,0" VerticalAlignment="Top" Height="28" Width="46" />
        <ComboBox x:Name="TipoviIntervencije" IsEnabled="{Binding Vozilo, Converter={StaticResource NullToIsReadOnlyConverter}}" SelectedItem="{Binding Path=TipIntervencije , Mode=TwoWay}" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="180,58,0,0" VerticalAlignment="Top" Width="131" Height="26" />
        <Label Content="Tip Intervencije: " HorizontalAlignment="Left" Margin="71,58,0,0" VerticalAlignment="Top" Width="104" />
        <Button x:Name="DodajIzmeni" Content="{Binding Intervencija, Converter={StaticResource SadrzajDugmetaDodajIzmeni}}" HorizontalAlignment="Left" Margin="22,341,0,0" VerticalAlignment="Top" Width="115" Height="37" />
        <Button Content="Vrati se" HorizontalAlignment="Left" Margin="253,341,0,0" VerticalAlignment="Top" IsCancel="True" Width="115" Height="37" />
        <Label x:Name="PorukaGreskeZaOpstinu" FontSize="14" FontWeight="Normal" Foreground="Red" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="71,133,0,0" VerticalAlignment="Top" Width="240" Height="29" />
        <Label x:Name="PorukaGreskeZaAdresu" FontSize="14" FontWeight="Normal" Foreground="Red" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="71,187,0,0" VerticalAlignment="Top" Height="29" Width="240" />
        <Label x:Name="PorukaGreskeZaDatum" FontSize="14" FontWeight="Normal" Foreground="Red" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,243,0,0" VerticalAlignment="Top" Height="29" Width="385" />
        <Label x:Name="PorukaGreskeZaVreme" FontSize="14" FontWeight="Normal" Foreground="Red" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="71,299,0,0" VerticalAlignment="Top" Height="29" Width="240" />
    </Grid>
</Window>
