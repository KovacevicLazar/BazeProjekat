<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intervencije_VatrogasnihJedinicaUI.Views"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Intervencije_VatrogasnihJedinicaUI.Views.DodavanjeIntervencijeView"
        mc:Ignorable="d"
        FontWeight="Bold"
        WindowStartupLocation="CenterScreen"
        Title="DodavanjeIntervencijeView" Height="338.42" Width="428.474">
    <Grid>

        <Label Content="Dodavanje nove intervencije:" FontSize="20" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="356" Margin="0,10,0,0"/>
        <Label Content="Adresa:" HorizontalAlignment="Left" Margin="32,119,0,0" VerticalAlignment="Top" Width="94"/>
        <Label Content="Opstina:" HorizontalAlignment="Left" Margin="32,93,0,0" VerticalAlignment="Top" Width="94"/>
        <Label Content="Datum:" HorizontalAlignment="Left" Margin="32,145,0,0" VerticalAlignment="Top" Width="94"/>
        <TextBox x:Name="Adresa"  HorizontalAlignment="Left" Height="23" Margin="127,119,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="Opstine" SelectedItem="{Binding IzabranaOpstina, Mode=OneWayToSource}"  DisplayMemberPath="Naziv_Opstine" HorizontalAlignment="Left" Margin="127,92,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Dodaj"  Content="Dodaj" HorizontalAlignment="Left" Margin="32,226,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Vrati se" HorizontalAlignment="Left" Margin="265,226,0,0" VerticalAlignment="Top" Width="75" IsCancel="True"/>
        <DatePicker x:Name="Datum"  HorizontalAlignment="Left" Margin="127,147,0,0" VerticalAlignment="Top" Width="120" Height="26"/>
        <Label x:Name="Vreme" Content="Vreme:" HorizontalAlignment="Left" Margin="32,179,0,0" VerticalAlignment="Top" Width="94"/>
        <Label Content=":" FontSize="23" VerticalContentAlignment="Top"  HorizontalAlignment="Left"  VerticalAlignment="Top" Width="19" Height="37" Margin="173,167,0,0"/>
        <xctk:IntegerUpDown x:Name="Sati" Value="{Binding Sati, Mode=TwoWay}"   Minimum="0" Maximum="23" HorizontalAlignment="Left" Margin="127,178,0,0" VerticalAlignment="Top" Height="26" Width="46"/>
        <xctk:IntegerUpDown x:Name="Minuti" Value="{Binding Minuti, Mode=TwoWay}" Minimum="0" Maximum="59" HorizontalAlignment="Left" Margin="187,178,0,0" VerticalAlignment="Top" Height="26" Width="46"/>
        <ComboBox x:Name="TipoviIntervencije" SelectedItem="{Binding Path=TipIntervencije , Mode=OneWayToSource}"  HorizontalAlignment="Left" Margin="127,65,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Tip Intervencije: " HorizontalAlignment="Left" Margin="23,65,0,0" VerticalAlignment="Top" Width="104"/>


    </Grid>
</Window>
